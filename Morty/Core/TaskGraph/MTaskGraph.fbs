include "TaskGraph/MTaskNode.fbs";
namespace morty.fbs;

table MTaskNodeDesc
{
    node_id: uint;
	node_type: string;

    //Each node records from which other node it is connected to, and the index of this array is the input to which this node is connected
    link_node_id: [uint];
    link_output_id: [uint];

	data: [ubyte];
}


table MTaskGraph
{
    node_array: [MTaskNodeDesc];
}

root_type MTaskGraph;

file_identifier "MFBS";