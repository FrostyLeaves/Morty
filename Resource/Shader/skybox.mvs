#include "light_forward.hlsl"

struct VS_IN_SKYBOX
{
    float3 pos : POSITION;
};

struct VS_OUT_SKYBOX
{
    float4 pos : SV_POSITION;
    float3 uvw : UVW;
};

VS_OUT_SKYBOX VS(VS_IN_SKYBOX input)
{
    VS_OUT_SKYBOX output;

    output.pos = mul(float4(input.pos + U_f3CameraPosition, 1.0f), U_matCamProj);
    
    //set z to z-far.
    output.pos.z = output.pos.w;

    output.uvw = input.pos;

    return output;
}
