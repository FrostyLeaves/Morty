#include "inner_constant.hlsl"

struct VS_IN
{
    float3 pos : POSITION;
    float4 color : COLOR;
};

struct VS_OUT
{
    float4 pos : SV_POSITION;
    float4 color : COLOR;
};

VS_OUT VS_MAIN(VS_IN input)
{
    VS_OUT output;

    output.pos = mul(float4(input.pos, 1.0f), u_matCamProj);
    output.color = input.color;

    return output;
}