
struct VS_IN
{
    float3 pos : POSITION;
    float4 color : COLOR;
};

struct VS_OUT
{
    float4 pos : SV_POSITION;
    float4 color : COLOR;
};

VS_OUT VS_MAIN(VS_IN input)
{
    VS_OUT output;

    output.pos.xy = input.pos.xy;
    output.pos.w = 1.0f;
    output.pos.z = 0.0f;
    output.color = input.color;

    return output;
}
