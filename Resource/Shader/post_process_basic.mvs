#include "inner_constant.hlsl"
#include "inner_functional.hlsl"

struct VS_IN_POST
{
    float2 pos : POSITION;
};

struct VS_OUT_POST
{
    float4 pos : SV_POSITION;
    float2 uv : TEXCOORD;
};

VS_OUT_POST VS(VS_IN_POST input)
{
    VS_OUT_POST output;

    output.pos.xy = input.pos.xy;
    output.pos.w = 1.0f;
    output.pos.z = 0.0f;
    output.uv.x = output.pos.x * 0.5f + 0.5f;
    output.uv.y = 0.5f - output.pos.y * 0.5f;

    return output;
}
