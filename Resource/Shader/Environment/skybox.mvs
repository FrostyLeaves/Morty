#include "Internal/internal_constant.hlsl"

struct VS_IN
{
    float3 pos : POSITION;
};

struct VS_OUTPUT
{
    float4 pos : SV_POSITION;
    float3 uvw : UVW;
};

VS_OUTPUT VS_MAIN(VS_IN input)
{
    VS_OUTPUT output;

    output.pos = mul(float4(input.pos + u_f3CameraPosition, 1.0f), u_matCamProj);
    
    //set z to z-far.
    output.pos.z = output.pos.w;

    output.uvw = input.pos;

    return output;
}
